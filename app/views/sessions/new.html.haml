%h1 Login

= form_tag login_create_path do

  = label :user, :user_id, 'User-ID'
  = text_field :user, 'user_id'

  = label :user, :email, 'E-Mail'
  = text_field :user, 'email'

  = button_to 'Login to my account', login_create_path, :method => :get
  = link_to 'Sign-up for an account', new_user_path, :method => :get
